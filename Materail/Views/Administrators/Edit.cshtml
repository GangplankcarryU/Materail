@model Materail.Models.ViewModel.VMAdministratorsEdit

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>VMAdministratorsEdit</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.admId)

        <div class="form-group">
            @Html.LabelFor(model => model.admName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.admName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.admName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.admAct, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.admAct, new { htmlAttributes = new { @class = "form-control" } })

                <p class="text-danger">@ViewBag.ErrorMessage</p>

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.admPwd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.admPwd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.admPwd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.admGender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @if (Model.admGender == true)
                    {
                        <input class="check-box" data-val="true" data-val-required="請選擇性別" id="admGender1" name="admGender" type="radio" value="true" checked />
                        <span>男</span>
                        <input class="check-box" data-val="true" data-val-required="請選擇性別" id="admGender0" name="admGender" type="radio" value="false" />
                        <span>女</span>
                    }
                    else
                    {
                        <input class="check-box" data-val="true" data-val-required="請選擇性別" id="admGender1" name="admGender" type="radio" value="true" />
                        <span>男</span>
                        <input class="check-box" data-val="true" data-val-required="請選擇性別" id="admGender0" name="admGender" type="radio" value="false" checked />
                        <span>女</span>
                    }

                    <span class="field-validation-valid text-danger" data-valmsg-for="admGender" data-valmsg-replace="true"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.admTel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.admTel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.admTel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.admEmail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.admEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.admEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("回管理員列表", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
