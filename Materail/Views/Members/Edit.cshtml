@model Materail.Models.ViewModel.VMMembersEdit

@{
    ViewBag.Title = "Edit";
    var selected = "";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>VMMembersEdit</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.memId)

        <div class="form-group">
            @Html.LabelFor(model => model.memName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.memName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.memName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.memAct, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.memAct, new { htmlAttributes = new { @class = "form-control" } })
                <p class="text-danger">@ViewBag.ErrorMessage</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.memPwd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.memPwd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.memPwd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.memTel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.memTel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.memTel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.memEmail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.memEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.memEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.memGender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @if (Model.memGender == true)
                    {
                        <input class="check-box" data-val="true" data-val-required="請選擇性別" id="memGender1" name="memGender" type="radio" value="true" checked />
                        <span>男</span>
                        <input class="check-box" data-val="true" data-val-required="請選擇性別" id="memGender0" name="memGender" type="radio" value="false" />
                        <span>女</span>
                    }
                    else
                    {
                        <input class="check-box" data-val="true" data-val-required="請選擇性別" id="memGender1" name="memGender" type="radio" value="true" />
                        <span>男</span>
                        <input class="check-box" data-val="true" data-val-required="請選擇性別" id="memGender0" name="memGender" type="radio" value="false" checked />
                        <span>女</span>
                    }

                    <span class="field-validation-valid text-danger" data-valmsg-for="memGender" data-valmsg-replace="true"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Authority, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Authority, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Authority, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.memTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.memTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.memTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.admId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="admId" class="form-control" name="admId">
                    @foreach (var item in ViewBag.adm)
                    {
                        selected = item.admId == ViewBag.admId ? "selected" : "";
                        <option value="@item.admId" @selected>@item.admId : @item.admName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("回職員列表", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
